<.flash_group flash={@flash} />
<div class="p-8 bg-slate-600 h-screen">
  <div>
    <.link href={~p"/machines"}>Machines</.link>
  </div>
  <div class="grid grid-cols-4 gap-4">
    <%= for machine <- @machines do %>
      <div class="bg-slate-400 p-4 rounded">
        <p><%= machine.name %></p>
        <p><%= machine.ip_address %></p>
      </div>
    <% end %>
  </div>
</div>
